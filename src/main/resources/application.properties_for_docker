spring.jpa.hibernate.ddl-auto=none
spring.jpa.database-platform=org.hibernate.dialect.MySQLDialect
spring.jpa.show-sql=false

spring.datasource.url=jdbc:mysql://db:3306/snsppoi?autoReconnect=true&useSSL=false
spring.datasource.username=snsppoi_user
spring.datasource.password=snsppoi_pass
spring.datasource.driver-class-name=com.mysql.jdbc.Driver

spring.flyway.enabled=true
spring.servlet.multipart.enabled=true

spring.thymeleaf.enabled=true
spring.thymeleaf.cache=false

# logging
logging.path=/var/log

# file upload setting
spring.servlet.multipart.max-file-size=10MB
spring.servlet.multipart.max-request-size=100MB
spring.servlet.multipart.file-size-threshold=100MB
spring.resources.static-locations=classpath:/templates/


# FLYWAY (FlywayProperties)
spring.flyway.check-location=false
spring.flyway.url= jdbc:mysql://db:3306/snsppoi?autoReconnect=true&useSSL=false
spring.flyway.user= snsppoi_user
spring.flyway.password= snsppoi_pass
